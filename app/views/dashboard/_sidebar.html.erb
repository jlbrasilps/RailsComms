<div class="w-36 min-h-screen bg-gray-700 flex flex-col p-4 fixed left-0 z-[555]" data-sidebar-target="sidebar"> 
  <div class="flex justify-end w-full"> 
    <%= link_to "Create Server", new_server_path, class: "text-lg text-gray-100 px-3 py-2 rounded-lg bg-blue-500",
      data: { turbo_frame: :dashboard } %>
  </div>

  <div class="flex flex-col gap-2 mt-4">
    <%= render partial: "server", collection: current_user.owned_servers.order(created_at: :desc) %>
    <%= render partial: "server", collection: current_user.joined_servers.order(created_at: :desc) %>
  </div>
</div>