<div class="w-full h-screen flex flex-col items-center pt-24">
  <% if @invite_link %>
    <div class="max-w-2xl h-[40vh] w-full rounded-lg bg-gray-600 flex flex-col items-center p-4 pb-16"> 
      <h1 class="text-3xl text-gray-100"> You were invited to join a server </h1>
      <h2 class="text-5xl text-gray-100"> <%= @invite_link.server_name %> </h2>
      
      <p class="text-xl text-gray-200"> Owned by <%= @invite_link.server.owner.username %></p>
      
      <%= link_to "Join Server", invitations_path(uniq_id: @invite_link.uniq_id), class: "px-3 py-2 rounded-lg text-3xl bg-blue-500 text-blue-50 mt-auto hover:scale-105 hover:bg-blue-600",
        data: { turbo_method: :post } %>
    </div>
  <% else %>
    <h1 class="text-3xl text-gray-900"> Sorry we could not find a server for that link </h1>
  <% end %>
</div>